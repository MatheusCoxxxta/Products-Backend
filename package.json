{
    "name": "My-app",
    "version": "1.0.0",
    "main": "index.js",
    "license": "MIT",
    "scripts": {
        "build": "./node_modules/.bin/babel src --extensions \".js,.ts\" --out-dir dist --copy-files --source-maps",
        "start": "node dist/shared/infra/http/server.js",
        "dev:server": "ts-node-dev -r tsconfig-paths/register --transpile-only --ignore-watch node_modules src/shared/infra/http/server.ts",
        "dev:debug": "ts-node-dev -r tsconfig-paths/register --inspect --transpile-only --ignore-watch node_modules src/shared/infra/http/server.ts",
        "typeorm": "ts-node-dev -r tsconfig-paths/register --transpile-only --ignore-watch node_modules ./node_modules/typeorm/cli.js",
        "test": "jest --watchAll false",
        "lint": "eslint ./src --max-warnings 0 --fix"
    },
    "dependencies": {
        "aws-sdk": "^2.1033.0",
        "axios": "^0.21.1",
        "bcryptjs": "^2.4.3",
        "bull": "^4.1.1",
        "celebrate": "^14.0.0",
        "class-transformer": "0.4.0",
        "cors": "^2.8.5",
        "date-fns": "^2.26.0",
        "dotenv": "^9.0.2",
        "express": "^4.17.1",
        "express-async-errors": "^3.1.1",
        "express-graphql": "^0.12.0",
        "graphql": "^16.5.0",
        "handlebars": "^4.7.7",
        "ioredis": "^4.28.0",
        "jsonwebtoken": "^8.5.1",
        "multer": "^1.4.3",
        "mysql2": "^2.3.3",
        "nodemailer": "^6.7.1",
        "pg": "^8.7.1",
        "reflect-metadata": "^0.1.13",
        "serverless-http": "^2.7.0",
        "serverless-offline": "^8.8.0",
        "swagger-ui-express": "^4.3.0",
        "ts-node": "^10.9.1",
        "tsyringe": "^4.5.0",
        "typeorm": "0.2.38",
        "uuid": "^8.3.2"
    },
    "devDependencies": {
        "@babel/cli": "^7.13.16",
        "@babel/core": "^7.14.0",
        "@babel/node": "^7.13.13",
        "@babel/plugin-proposal-class-properties": "^7.13.0",
        "@babel/plugin-proposal-decorators": "^7.13.15",
        "@babel/preset-env": "^7.14.1",
        "@babel/preset-typescript": "^7.13.0",
        "@types/bcryptjs": "^2.4.2",
        "@types/cors": "^2.8.10",
        "@types/express": "^4.17.11",
        "@types/graphql": "^14.5.0",
        "@types/ioredis": "^4.28.1",
        "@types/jest": "^26.0.23",
        "@types/jsonwebtoken": "^8.5.6",
        "@types/multer": "^1.4.7",
        "@types/nodemailer": "^6.4.4",
        "@types/swagger-ui-express": "^4.1.3",
        "@types/uuid": "^8.3.1",
        "@typescript-eslint/eslint-plugin": "^4.22.1",
        "@typescript-eslint/parser": "^4.22.1",
        "babel-plugin-module-resolver": "^4.1.0",
        "babel-plugin-transform-typescript-metadata": "^0.3.2",
        "eslint": "^7.26.0",
        "eslint-config-airbnb-base": "^14.2.1",
        "eslint-config-prettier": "^8.3.0",
        "eslint-import-resolver-typescript": "^2.4.0",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-prettier": "^3.4.0",
        "husky": "^4.3.8",
        "jest": "^26.6.3",
        "lint-staged": "^10.5.3",
        "prettier": "^2.2.1",
        "ts-jest": "^26.5.6",
        "ts-node-dev": "^1.1.6",
        "tsconfig-paths": "^3.9.0",
        "typescript": "^4.3.4"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "./**/*.{ts,tsx}": [
            "yarn eslint ./src --max-warnings 0 --fix",
            "git add"
        ]
    }
}
